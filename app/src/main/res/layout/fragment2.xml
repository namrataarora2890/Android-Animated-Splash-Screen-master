<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >
    <!--LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"-->
    <TextView style="?android:textAppearanceMedium"
        android:id="@+id/f2tv1"
        android:padding="16dp"
        android:lineSpacingMultiplier="1.2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#000"
        android:text="Q2 Do you believe that  information being shown shall be  made available to you along with  Service Plan details , and on service provider websites?" />



    <CheckBox
        android:id="@+id/cb2"
        android:layout_below="@+id/f2tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yes"
        android:textColor="#00f"
        android:checked="false"
        android:textSize="20sp"/>

    <CheckBox
        android:id="@+id/cb3"
        android:layout_below="@+id/cb2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No"
        android:textColor="#00f"
        android:checked="false"
        android:textSize="20sp"/>

    <CheckBox
        android:id="@+id/cb4"
        android:layout_below="@+id/cb3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="May Be"
        android:textColor="#00f"
        android:checked="false"
        android:textSize="20sp"/>

    <!--/LinearLayout-->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/cb3"
            android:layout_marginTop="5px"
            android:gravity="center_horizontal|bottom"
            android:paddingTop="2px" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                android:text="Swipe>>" />
        </LinearLayout>

    </RelativeLayout>


</ScrollView>