<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >
        <TextView style="?android:textAppearanceMedium"
            android:id="@+id/f4tv1"
            android:padding="16dp"
            android:lineSpacingMultiplier="1.2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="20sp"
            android:text="Q4 Do you think if the same information was presented as follows, it will be easier to understand? Here, we have just converted the numbers reported earlier to what kind of a quality of experience you can expect on that network performance" />

        <ImageView
            android:id="@+id/quantitative"
            android:layout_below="@+id/f4tv1"
            android:alpha="1.0"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:adjustViewBounds='true'
            android:layout_weight="0.5"
            android:scaleType="centerCrop"
            android:background="@drawable/starr"></ImageView>

        <LinearLayout
            android:id="@+id/lq"
            android:layout_below="@+id/quantitative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/f4q4cb1"
                android:layout_below="@+id/quantitative"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:textColor="#00f"
                android:checked="false"
                android:textSize="20sp"/>

            <CheckBox
                android:id="@+id/f4q4cb2"
                android:layout_below="@+id/f4q4cb1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"
                android:textColor="#00f"
                android:checked="false"
                android:textSize="20sp"/>

            <CheckBox
                android:id="@+id/f4q4cb3"
                android:layout_below="@+id/f4q4cb2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="May Be"
                android:textColor="#00f"
                android:checked="false"
                android:textSize="20sp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/lq"
            android:layout_marginTop="5px"
            android:gravity="center_horizontal|bottom"
            android:paddingTop="2px" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                android:text=" Swipe >>"/>
        </LinearLayout>

    </RelativeLayout>


</ScrollView>